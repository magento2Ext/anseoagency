# Ignore WordPress core files
/wp-admin/
/wp-includes/

# Ignore the wp-config.php file (contains sensitive data like database credentials)
wp-config.php

# Ignore any file uploads (media files) that are uploaded via the WordPress dashboard
/wp-content/uploads/

# Ignore the cache directory
/wp-content/cache/

# Ignore the backup and temporary files generated by WordPress
wp-content/backup-*/ 
wp-content/upgrade/

# Ignore IDE/editor specific files
.idea/
.vscode/

# Ignore temporary files or system files
.DS_Store
Thumbs.db

# Ignore logs
*.log

# Ignore the `.env` file if you're using environment variables for sensitive data
.env

# Ignore the Composer files if you're using Composer for dependencies
/vendor/

# Ignore the node_modules folder if you're using npm or Yarn
node_modules/
